{
    "servers": {
        "supabase": {
            "command": "npx",
            "args": [
                "-y",
                "@supabase/mcp-server-supabase@latest",
                "--project-ref=yycmlnxomwxdqsqfccvz"
            ],
            "env": {
                "SUPABASE_ACCESS_TOKEN": "${input:supabase-access-token}"
            },
            "type": "stdio"
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem@2025.8.21",
                "${input:allowed_dirs}"
            ],
            "envFile": "${input:envFile}",
            "type": "stdio"
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "type": "stdio"
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "type": "stdio"
        },
        "brave-search": {
            "command": "npx",
            "args": [
                "-y",
                "@brave/brave-search-mcp-server",
                "--transport",
                "stdio"
            ],
            "env": {
                "BRAVE_API_KEY": "BSAsnySCtYJPtVM2HPuWd-wf1Dj69xd"
            },
            "type": "stdio"
        }
    },
    "inputs": [
        {
            "type": "promptString",
            "id": "supabase-access-token",
            "description": "Supabase personal access token",
            "password": true
        },
        {
            "id": "allowed_dirs",
            "type": "promptString",
            "description": "Which directories should the MCP server allow access to? (comma-separated, absolute paths recommended)"
        },
        {
            "id": "envFile",
            "type": "promptString",
            "description": "Do you want to specify an envFile for environment variables? (optional, leave blank if not needed)"
        }
    ]
}